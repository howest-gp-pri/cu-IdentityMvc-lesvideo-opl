@model AccountLoginViewModel

<div class="row">
    <div class="col col-lg-5 border border-1 rounded rounded-3 mx-auto">
        <h5>@Model.PageTitle</h5>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form asp-area="Account" asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Login</button>
            <a asp-action="Register" class="alert-link">Register</a>
        </form>
    </div>
</div>


